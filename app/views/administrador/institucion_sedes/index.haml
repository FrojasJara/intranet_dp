= datatable_src

.sectionHeader
    %h1 Mantenedor de Instituciones en Sedes
    = link_to raw("#{t 'crud.new'} InstituciÃ³n en Sede"), new_administrador_institucion_sede_path, class: "btn btn-primary"


%table#example.table
    %thead
        %tr
            %th ID
            %th Nombre
            %th Esta Abierta

    %tbody
        - @items.each do |i|
            %tr
                %td= i.id
                %td
                    .btn-group
                        %a.dropdown-toggle{href: '#', data: {toggle: 'dropdown'}}
                            = i.nombre
                            %span.caret
                        %ul.dropdown-menu
                            %li= link_to raw(t('crud.edit')), edit_administrador_institucion_sede_path(i)
                            %li= link_to raw(t('crud.delete')), administrador_institucion_sede_path(i), :confirm => t('crud.confirm'), method: :delete
                            %li.divider
                            %li= history i, t(:historial) 
                %td= i.esta_abierta
