#abandonar-asignaturas
    .page-header
        %h1 Abandonar asignaturas
    = render "alumnos/alumnos/partials/seleccion_plan"
    = render "alumnos/alumnos/partials/informacion_tabulada_alumno"
    - if @puede_abandonar
        = render partial: "partials/notificaciones/info", locals: { mensaje: @mensaje }
        = render partial: "alumnos/alumnos/partials/asignaturas_abandonables", 
            locals: { asignaturas_abandonables: @asignaturas_abandonables[:abandonables], 
                limite_asignaturas_abandonables: @limite_asignaturas_abandonables }

    - else
        = notificaciones