= datatables

.sectionHeader
    %h1 Asignaturas
    
    = link_to raw("#{t 'crud.new'} Asignatura"), new_mantenedores_asignatura_path, class: "btn btn-primary"

%table#example.table
    %thead
        %tr
            %th ID
            %th Nombre
            %th CÃ³digo
    %tbody
        - @items.each do |i|
            %tr
                %td= i.id
                %td
                    .btn-group
                        %a.dropdown-toggle{href: '#', data: {toggle: 'dropdown'}}
                            = i.nombre
                            %span.caret
                        %ul.dropdown-menu
                            %li= link_to raw(t('crud.edit')), edit_mantenedores_asignatura_path(i)
                            %li= link_to raw(t('crud.delete')), mantenedores_asignatura_path(i), :confirm => t('crud.confirm'), method: :delete
                            %li.divider
                            %li= history i, t(:historial) 
                %td= i.codigo