= datatables

.sectionHeader
    %h1 Salas
    = link_to raw("#{t 'crud.new'} Sala"), new_mantenedores_sala_path, class: "btn btn-primary"

%table#example.table
    %thead
        %tr
            %th ID
            %th Nombre
            %th Piso
            %th Capacidad
            %th Tipo
            %th Sede
    %tbody
        - @items.each do |i|
            %tr
                %td= i.id
                %td
                    .btn-group
                        %a.dropdown-toggle{href: '#', data: {toggle: 'dropdown'}}
                            = i.nombre
                            %span.caret
                        %ul.dropdown-menu
                            %li= link_to raw(t('crud.edit')), edit_mantenedores_sala_path(i)
                            %li= link_to raw(t('crud.delete')), mantenedores_sala_path(i), :confirm => t('crud.confirm'), method: :delete
                            %li.divider
                            %li= history i, t(:historial) 
                
                %td= i.piso
                %td= i.capacidad
                %td= i.es_laboratorio ? 'Laboratorio' : 'Sala'
                %td= value(i.sede, :nombre)
