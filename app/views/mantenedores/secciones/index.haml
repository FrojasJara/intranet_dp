                %td= i.cupos
                %td= i.numero
                %td= get_name Seccion, :ESTADOS, i.estado 
                / %td= i.asignatura.nombre
                %td= i.periodo.nombre
                %td= i.docente.blank? ? "Sin profesor asignado" : i.docente.datos_personales.nombre
                %td
