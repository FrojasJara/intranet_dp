            %li
                %a{:href => "#{alumno_obtener_asignaturas_cursadas_path(current_user[:id])}"} Asignaturas cursadas
            %li
                %a{:href => "#{alumno_obtener_asignaturas_abandonadas_path(current_user[:id])}"} Asignaturas abandonadas
