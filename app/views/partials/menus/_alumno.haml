            %li
                %a{:href => "#{alumno_obtener_matriculas_path(current_user[:id])}"} Matrículas y planes de pago
            %li.divider
            %li
                %a{:href => "#{alumno_obtener_trabajos_path(current_user[:id])}"} Alumno trabajador
    %li.dropdown
        %a{:href => "#", :data => {:toggle => "dropdown"}}= "Período actual #{periodo_en_curso[:nombre]}"
        %ul.hide.dropdown-menu.inner-list
            %li
                %a{:href => "#{alumno_obtener_asignaturas_inscritas_path(current_user[:id])}"} Asignaturas inscritas
            %li
                %a{:href => "#{alumno_obtener_horario_path(current_user[:id])}"} Horario      

    %li.nav-header Biblioteca 
    %li{:class => controller_is?('biblioteca') && action_is?("lista_libros_sedes") ? 'active' : '' }
        = link_to 'Consultar Biblioteca', lista_libros_sedes_path